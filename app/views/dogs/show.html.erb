<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Dog # <%= @dog.id %></h4>
  </div>
  
  <div class="row justify-content-center">
    <table class="table">
      <tbody>
        <tr>
          <th>Name:</th>
          
          <td><%= @dog.name %></td>
        </tr>
        
        <tr>
          <th>Breed:</th>
          
          <td><%= @dog.breed %></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <%= link_to "Back to Index", root_path %>
</div>