<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Dog</h4>
  </div>

  <div class="row justify-content-center">
    <%= form_with scope: :dog, url: dogs_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :name%>

        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :breed %>

        <%= form.text_area :breed, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>